<h1>Profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name, :readonly => true, class: 'form-control' %>

      <%= f.label :email %>
      <%= f.email_field :email, :readonly => true, class: 'form-control' %>

      <%= f.label :location %>
      <%= f.text_field :location, :readonly => true, class: 'form-control'%>
    <% end %>
  </div>
</div>